<h1>Login Page</h1>

<%= form_with(url: author_sessions_path, method: :post) do |form| %>
    <div class="field">
        <%= form.label :email %>
        <%= form.text_field :email %>
        <br>
    </div>
    <div class="field">
        <%= form.label :password %>
        <%= form.password_field :password %>
        <br>
    </div>
    <div class="actions">
        <%= form.submit "Login" %>
    </div>
    <% end %>

    <%= link_to 'Back', articles_path %>